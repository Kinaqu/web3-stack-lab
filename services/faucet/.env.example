PORT=3002

# Inside Docker, use host.docker.internal to reach the host RPC (Ubuntu needs host-gateway in compose)
L2_RPC_URL=http://host.docker.internal:8545

# Faucet wallet private key (must have funds on L2)
FAUCET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Payout amount per request
AMOUNT_ETH=0.0001

# Rate limits
IP_WINDOW_MS=600000
IP_MAX_REQ=5
ADDR_COOLDOWN_MS=1800000

# Payout log directory inside container
LOG_DIR=/var/log/faucet

# Enable this if you run behind a reverse proxy and want correct client IPs
TRUST_PROXY=false
